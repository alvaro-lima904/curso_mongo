db.combats.aggregate([
    {
        $lookup: {
            from: "pokemon",
            localField: "First_pokemon",
            foreignField: "_id",
            as: "pokemon1",
        }
    },
    {
        $lookup: {
            from: "pokemon",
            localField: "Second_pokemon",
            foreignField: "_id",
            as: "pokemon2",
        }
    },
    {
        $project: {
            _id: 0,
            "First_pokemon": 1,
            "Second_pokemon": 1,
            "Winner": 1,
            "pokemon1.name": 1,
            "pokemon2.name": 1,
        }
    }
])